{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "node16",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,  // Fix: Permite .ts imports no build
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "sourceMap": false,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist/server",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["app.ts", "api/**/*.ts", "config/**/*.ts", "routes/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.ts"]
}