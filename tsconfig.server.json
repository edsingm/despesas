{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],  // Ou do seu base tsconfig.json
    "module": "commonjs",  // Essencial: Node compatível, ignora bundler
    "moduleResolution": "node",  // Pra Node, não bundler
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,  // Sem .d.ts em prod
    "sourceMap": false,    // Sem maps em prod
    "strict": true,        // Mantenha estrito se no base
    "noEmit": false,
    "outDir": "./dist/server",
    "baseUrl": ".",
    "paths": {  // Copie do base se usar aliases
      "@/*": ["./*"]
    }
  },
  "include": ["app.ts", "api/**/*.ts", "config/**/*.ts", "routes/**/*.ts"],  // Suas pastas
  "exclude": ["node_modules", "dist", "src/**/*.ts"]  // Exclui frontend
}